---
import { Calendar } from 'lucide-astro';
import Tag from './Tag.astro';
import TilContent from './TilContent.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  note: CollectionEntry<'notes'>;
}

const { note } = Astro.props;
---

<article class="rounded-lg border bg-card text-card-foreground shadow-sm hover:shadow-md transition-all duration-200 h-full flex flex-col">
  <div class="note-header flex flex-col space-y-1.5 p-6 pb-4">
    <div class="flex items-center justify-between mb-2">
      <div class="flex items-center space-x-2 text-sm text-muted-foreground">
        <Calendar class="size-3" />
        <time datetime={note.data.date.toISOString()}>
          {note.data.date.toISOString().split('T')[0]}
        </time>
      </div>
    </div>
    <h3 class="text-xl font-semibold leading-tight tracking-tight">
      <a href={`/${note.slug}`} class="hover:underline underline-offset-4 decoration-primary/50">{note.data.title}</a>
    </h3>
  </div>
  
  <div class="note-content px-6 pb-4 flex-1">
    <TilContent note={note} />
  </div>
  
  <div class="note-tags px-6 pb-6 pt-2 flex flex-wrap gap-2 border-t border-border/50 mt-auto">
    {note.data.tags?.map((tag) => (
      <Tag tag={tag} />
    ))}
  </div>
</article>
