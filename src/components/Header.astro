---
import { Github, Search } from "lucide-astro";
---

<header class="border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50">
  <div class="max-w-4xl mx-auto px-4 h-14 flex items-center justify-between">
    <div class="flex items-center gap-4">
      <a href="/" class="flex items-center gap-2 font-bold text-lg hover:opacity-80 transition-opacity min-h-[44px] min-w-[44px] px-2 -ml-2">
        <span class="text-primary">TIL</span>
        <span class="text-muted-foreground font-normal hidden sm:inline">/</span>
        <span class="text-foreground hidden sm:inline">Home</span>
      </a>
      <nav class="hidden sm:flex items-center gap-1">
        <a href="/archive" class="hover:text-foreground transition-colors min-h-[44px] min-w-[44px] px-3 py-2 flex items-center justify-center">Archive</a>
        <a href="/tags" class="hover:text-foreground transition-colors min-h-[44px] min-w-[44px] px-3 py-2 flex items-center justify-center">Tags</a>
      </nav>
    </div>
    <div class="flex items-center gap-1">
      <a href="/search" class="sm:hidden p-2 min-h-[44px] min-w-[44px] flex items-center justify-center text-muted-foreground hover:text-foreground transition-colors">
        <Search class="size-5" />
        <span class="sr-only">Search</span>
      </a>
      <a href="/search" class="hidden sm:flex hover:text-foreground transition-colors min-h-[44px] min-w-[44px] px-3 py-2 items-center justify-center">Search</a>
      <a href="https://github.com/zhaochunqi/til" target="_blank" rel="noreferrer" class="text-muted-foreground hover:text-foreground transition-colors p-2 min-h-[44px] min-w-[44px] flex items-center justify-center">
        <Github class="size-5" />
        <span class="sr-only">GitHub</span>
      </a>
    </div>
  </div>
</header>
