---
import { Github } from 'lucide-astro';
---

<header class="border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50">
  <div class="max-w-5xl mx-auto px-4 h-14 flex items-center justify-between">
    <div class="flex items-center gap-6">
      <a href="/" class="flex items-center gap-2 font-bold text-lg hover:opacity-80 transition-opacity">
        <span class="text-primary">TIL</span>
      </a>
      <nav class="flex items-center gap-4 text-sm font-medium text-muted-foreground">
        <a href="/" class="hover:text-foreground transition-colors">Home</a>
        <a href="/archive" class="hover:text-foreground transition-colors">Archive</a>
        <a href="/tags" class="hover:text-foreground transition-colors">Tags</a>
        <a href="/search" class="hover:text-foreground transition-colors">Search</a>
      </nav>
    </div>
    <div class="flex items-center gap-4">
      <a href="https://github.com/zhaochunqi/til" target="_blank" rel="noreferrer" class="text-muted-foreground hover:text-foreground transition-colors">
        <Github class="size-5" />
        <span class="sr-only">GitHub</span>
      </a>
    </div>
  </div>
</header>
