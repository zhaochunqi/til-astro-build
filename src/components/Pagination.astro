---
export interface Props {
	page: {
		url: {
			prev?: string;
			next?: string;
		};
		currentPage: number;
		lastPage: number;
	};
}

const { page } = Astro.props;
---

<nav class="flex items-center justify-between border-t border-border pt-6 mt-8" aria-label="Pagination">
  <div class="flex flex-1 justify-between sm:justify-start gap-2">
    {page.url.prev ? (
      <a
        href={page.url.prev}
        class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-md border border-border hover:bg-accent transition-colors min-h-[44px] min-w-[44px]"
      >
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <span class="hidden sm:inline">Previous</span>
      </a>
    ) : (
      <span class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-md border border-border text-muted-foreground opacity-50 cursor-not-allowed min-h-[44px] min-w-[44px]">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <span class="hidden sm:inline">Previous</span>
      </span>
    )}
    
    {page.url.next ? (
      <a
        href={page.url.next}
        class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-md border border-border hover:bg-accent transition-colors min-h-[44px] min-w-[44px]"
      >
        <span class="hidden sm:inline">Next</span>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    ) : (
      <span class="inline-flex items-center justify-center gap-2 px-4 py-2.5 text-sm font-medium rounded-md border border-border text-muted-foreground opacity-50 cursor-not-allowed min-h-[44px] min-w-[44px]">
        <span class="hidden sm:inline">Next</span>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    )}
  </div>
  
  <div class="hidden sm:block ml-4">
    <p class="text-sm text-muted-foreground">
      Page <span class="font-medium">{page.currentPage}</span> of <span class="font-medium">{page.lastPage}</span>
    </p>
  </div>
</nav>
