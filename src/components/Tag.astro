---
interface Props {
	tag: string;
}

const { tag } = Astro.props;
---

<a
  href={`/tags/${tag}`}
  class="inline-flex items-center px-2.5 py-1 text-sm text-gray-500 hover:text-gray-900 hover:bg-gray-100 rounded-md transition-colors min-h-[36px] sm:min-h-[44px] min-w-[36px] sm:min-w-[44px]"
>
  <span class="mr-0.5">#</span>{tag}
</a>
