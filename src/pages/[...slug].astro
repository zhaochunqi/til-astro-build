---
import { getCollection } from "astro:content";
import { Link } from "lucide-astro";
import CopyButton from "../components/CopyButton.astro";
import RelatedNotes from "../components/RelatedNotes.astro";
import Tag from "../components/Tag.astro";
import TilContent from "../components/TilContent.astro";
import Layout from "../layouts/Layout.astro";
import { findRelatedNotes } from "../utils/relatedNotes";
import { site } from "../utils/config";

export async function getStaticPaths() {
	const notes = await getCollection("notes");
	return notes.map((note) => ({
		params: { slug: note.slug || note.id },
		props: { note },
	}));
}

const { note } = Astro.props;
const allNotes = await getCollection("notes");
const relatedNotes = findRelatedNotes(note, allNotes, 3);
const canonicalURL = new URL(`/${note.slug}`, site).href;
const isHidden = note.data.display === false;
---

<Layout title={`${note.data.title} - TIL`} canonicalURL={canonicalURL}>
  <div class="max-w-4xl mx-auto">
    <article class="rounded-lg border bg-card text-card-foreground shadow-sm">
      <div class="flex flex-col space-y-1.5 p-6 md:p-10 pb-2 md:pb-2">
        <h1 class="text-3xl md:text-4xl font-heading font-bold tracking-tight mb-2">{note.data.title}</h1>
        <div class="flex justify-end text-sm text-muted-foreground mb-4">
          <time datetime={note.data.date.toISOString()} class="hidden sm:block">
            {note.data.date.toISOString().split('T')[0]}
          </time>
        </div>
        <div class="relative hidden sm:block">
          <div class="absolute top-2 left-3 flex items-center gap-1 text-[10px] text-muted-foreground/60 select-none font-mono">
            <Link class="size-3" />
            <span>引用此 TIL</span>
          </div>
          <div class="relative rounded-lg border border-border bg-muted/30 pt-8 pb-3 px-3 shadow-sm">
            <pre class="overflow-x-auto text-xs pr-12 font-mono"><code style="background: transparent; padding: 0; border: none;">[{note.data.title}](https://til.zhaochunqi.com/{note.slug})</code></pre>
            <div class="absolute top-2 right-2">
              <CopyButton content={`[${note.data.title}](https://til.zhaochunqi.com/${note.slug})`} size="sm" />
            </div>
          </div>
        </div>
      </div>

      <div class="p-6 md:p-10 pt-0 md:pt-0">
        {isHidden && (
          <div class="mb-6 p-4 bg-amber-50 border border-amber-200 rounded-lg text-amber-800 dark:bg-amber-950/30 dark:border-amber-800/50 dark:text-amber-200">
            <p class="font-medium">⚠️ 注意</p>
            <p class="mt-1 text-sm">这篇文章已被作者设置为不在首页显示，可能是因为已过期或已无法正常工作。</p>
          </div>
        )}
        <TilContent note={note} />
      </div>

      <div class="p-6 md:p-10 pt-0 md:pt-0">
        {note.data.tags && note.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-8">
            {note.data.tags.map((tag) => <Tag tag={tag} />)}
          </div>
        )}
        <RelatedNotes relatedNotes={relatedNotes} />
      </div>

    </article>
  </div>
</Layout>
