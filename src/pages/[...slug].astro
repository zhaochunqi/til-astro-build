---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Tag from '../components/Tag.astro';
import TilContent from '../components/TilContent.astro';

export async function getStaticPaths() {
  const notes = await getCollection('notes');
  return notes.map((note) => ({
    params: { slug: note.slug || note.id },
    props: { note },
  }));
}

const { note } = Astro.props;
---

<Layout title={`${note.data.title} - TIL`}>
  <article class="max-w-3xl mx-auto py-8 px-4">
    <div class="mb-8">
      <h1 class="text-3xl font-bold font-heading tracking-tight mb-3">{note.data.title}</h1>
      <div class="flex flex-wrap gap-2 items-center text-sm text-muted-foreground">
        <time datetime={note.data.date.toISOString()}>
          {note.data.date.toISOString().split('T')[0]}
        </time>
        <span>â€¢</span>
        <div class="flex gap-2">
          {note.data.tags?.map((tag) => <Tag tag={tag} />)}
        </div>
      </div>
    </div>
    <TilContent note={note} />
  </article>
</Layout>
